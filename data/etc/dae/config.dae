group {
  proxy {
    filter: subtag(sub)
    filter: name(keyword: '香港', keyword: 'HK')
    filter: name(keyword: '台湾', keyword: 'TW')
    filter: name(keyword: '美国', keyword: 'US')
    policy: min_moving_avg
    # policy: fixed(1)
  }

  proxy_us {
    filter: subtag(sub)
    filter: name(keyword: '美国', keyword: 'US')
  }
}

# See https://github.com/daeuniverse/dae/blob/main/docs/en/configuration/routing.md for full examples.
routing {
  pname(NetworkManager, systemd-resolved, dnsmasq) -> direct
  pname(hiddify) -> must_direct
  dip(224.0.0.0/3, 'ff00::/8') -> direct

  dip(geoip:private) -> direct

  pname(tor, Telegram) -> proxy
  pname(code, exe) -> proxy_us
  domain(domain:.chatgpt.com, domain:.google.com, domain:registry.npmjs.org) -> proxy_us

  #!pname(zen-bin) -> direct

  pname(ssh, adb) -> direct
  pname(tailscaled, zerotier-one, easytier-core) -> direct

  # Disable h3 because it usually consumes too much cpu/mem resources.
  # l4proto(udp) && dport(443) -> block

  # Block AD
  domain(geosite:category-ads-all) -> block

  # 目标非常用端口都走直连，避免BT流量走代理
  #!dport(21,22,23,53,80,123,143,194,443,465,587,853,993,995,998) -> direct

  # Games
  #domain(ext:'geosite:category-games') -> direct
  # Steam
  domain(geosite:steam@cn, domain:steamserver.net, domain:steamcontent.com) -> direct

  dip(geoip:cn) -> direct
  domain(geosite:cn) -> direct

  fallback: proxy
}
